{
    "extends": ["config:base"],
    "packageRules": [
      {
        "matchPackagePatterns": ["^@types/"],
        "groupName": "📦 Tipagens TypeScript",
        "automerge": true
      },
      {
        "matchPackagePatterns": ["^react", "^next", "^react-dom"],
        "groupName": "⚛️ React Core"
      },
      {
        "matchPackagePatterns": ["^tailwind", "tailwindcss-animate", "tailwind-merge"],
        "groupName": "🎨 Tailwind Stack"
      },
      {
        "matchPackageNames": ["shadcn/ui", "lucide-react", "sonner", "cmdk", "vaul"],
        "groupName": "🧩 Componentes UI"
      }
    ],
    "schedule": ["after 10pm on sunday"],
    "labels": ["dependencies"],
    "automergeType": "branch",
    "dependencyDashboard": true
  }
  